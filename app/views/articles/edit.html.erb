<h1>Edit existing article</h1>
<h1>Create an article</h1>
<!--This is a model form see form helpers-->

<% if @article.errors.any? %>
<h2>The following errors preventing the article from getting created</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <!--preco mi to nefunguje???-->
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>