<h1>Create an article</h1>
<!--This is a model form see form helpers-->

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>